#!/usr/bin/env bash
# A script that loops from 1 to 10 using while displays bad luck for the 4th loop iteration displays good luck for the 8th loop iteration displays Best School for the other iterations

a=1

while [ $a -le 10 ]
do
    if [ $a -eq 4 ]
    then
        echo "bad luck"
    elif [ $a -eq 8 ]
    then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((a++))
done
